<p id="notice"><%= notice %></p>

<h1>Play Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @play_lists.each do |play_list| %>
      <tr>
        <td><%= play_list.name %></td>
        <td><%= link_to 'Show', play_list %></td>
        <td><%= link_to 'Edit', edit_play_list_path(play_list) %></td>
        <td><%= link_to 'Destroy', play_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Play List', new_play_list_path %>
